(defalias
    Aalt (layer-toggle audio_alt)
    Ashw (cmd-button "avolume --notify-all")
    AKss (cmd-button "adevice --class speakers")
    AKsh (cmd-button "adevice --class headphones")
    AKvu (cmd-button "avolume --increase 2")
    AKvd (cmd-button "avolume --decrease 2")
    AKvU (cmd-button "avolume --increase 10")
    AKvD (cmd-button "avolume --decrease 10")
    AKmt (cmd-button "avolume --mute")
    AKum (cmd-button "avolume --unmute")
    ACse (cmd-button "adevice --mic --class external")
    ACsi (cmd-button "adevice --mic --class internal")
    ACvu (cmd-button "avolume --mic --increase 2")
    ACvd (cmd-button "avolume --mic --decrease 2")
    ACvU (cmd-button "avolume --mic --increase 10")
    ACvD (cmd-button "avolume --mic --decrease 10")
    ACmt (cmd-button "avolume --mic --mute")
    ACum (cmd-button "avolume --mic --unmute")
    prev PreviousSong
    next NextSong
    pp   PlayPause
)
