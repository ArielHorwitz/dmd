# https://dystroy.org/broot

default_flags: --show-git-info --git-ignored --show-root-fs --hidden

# terminal_title: "[broot] {git-name}"
# terminal_title: "{file} üêÑ"
# terminal_title: "-= {file-name} =-"

# https://docs.rs/chrono/0.4.11/chrono/format/strftime/index.html
# date_time_format: %Y/%m/%d %R

# https://dystroy.org/broot/modal/
# modal: true
# initial_mode: command

show_selection_mark: true

# cols_order: [
#     mark
#     git
#     size
#     permission
#     date
#     count
#     branch
#     name
# ]

# true_colors: false

# see https://dystroy.org/broot/icons
# icon_theme: vscode
icon_theme: nerdfont

special_paths: {
    "~/.config": {
        show: always
    }
    "~/black": {
        list: always
        sum: always
    }
}

# quit_on_last_cancel: false

# https://dystroy.org/broot/input/#the-filtering-pattern
# search_modes: {
#     <empty>: fuzzy name
#     /: regex name
# }

# ext_colors: {
#     png: rgb(255, 128, 75)
#     rs: yellow
# }

content_search_max_file_size: 10MB

# max_panels_count: 2
# update_work_dir: true
enable_kitty_keyboard: false
lines_before_match_in_preview: 1
lines_after_match_in_preview: 1


