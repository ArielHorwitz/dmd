// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+i",
        "command": "composerMode.agent"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "ctrl+y",
        "command": "-editor.action.inlineDiffs.acceptPartialEdit",
        "when": "editorTextFocus && inlineDiffs.activeEditorWithDiffs"
    },
    {
        "key": "ctrl+y",
        "command": "-aichat.newfollowupaction"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-composer.fixerrormessage",
        "when": "!chatModeMenuFocused && !composerFocused && @composer.isCursorOnLint"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.view.debug",
        "when": "viewContainer.workbench.view.debug.enabled"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.action.toggleAgentLayoutSCM",
        "when": "cursor.appLayout == 'agent'"
    },
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.duplicateSelection"
    },
    {
        "key": "ctrl+alt+u",
        "command": "editor.action.transformToUppercase"
    },
    {
        "key": "ctrl+shift+alt+u",
        "command": "editor.action.transformToLowercase"
    },
    {
        "key": "ctrl+shift+o",
        "command": "outline.focus"
    },
    {
        "key": "ctrl+shift+e",
        "command": "workbench.action.focusFirstEditorGroup"
    },
    {
        "key": "ctrl+shift+e",
        "command": "-workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "ctrl+tab",
        "command": "composer.selectNextComposer",
        "when": "agentsPaneFocused || composerFocused"
    },
    {
        "key": "meta+tab",
        "command": "-composer.selectNextComposer",
        "when": "agentsPaneFocused && cursor.agentIdeUnification.enabled || composerFocused && cursor.agentIdeUnification.enabled"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "composer.selectPreviousComposer",
        "when": "agentsPaneFocused || composerFocused"
    },
    {
        "key": "shift+meta+tab",
        "command": "-composer.selectPreviousComposer",
        "when": "agentsPaneFocused && cursor.agentIdeUnification.enabled || composerFocused && cursor.agentIdeUnification.enabled"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
        "when": "editorFocus && !activeEditorGroupEmpty && !terminalFocus || !activeEditorGroupEmpty && !terminalFocus && activeEditor == 'workbench.editor.reviewchanges'"
    },
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        "when": "editorFocus && !activeEditorGroupEmpty && !terminalFocus || !activeEditorGroupEmpty && !terminalFocus && activeEditor == 'workbench.editor.reviewchanges'"
    }
]